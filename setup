here=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
user=$(whoami)

echo "sh -c \"/usr/bin/python $here/fp.py >> $here/fp.log\"" >> $here/ytfp.sh
sudo cp $here/ytfp.* /home/$user/.config/systemd/user/

systemctl --user enable ytfp.timer

touch $here/subscriptions
touch $here/watchlist
touch $here/fp.log

pip install $here/requirements.txt --user
